{
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist/",
    "rootDir": "./src/",
    "strict": true,
    "moduleResolution": "node",
    "types": [
      "./declarations",
      "@types/jest",
      "@types/node"
    ],
    "esModuleInterop": true
  }
}
